<?xml version="1.0" encoding="utf-8"?>
<!-- this is a state list drawable, which points to other drawables based on the state of something.
 this state list drawable specifies drawable button_beat_box_pressed as the background when pressed
 and drawable button_beat_box_normal when not pressed -->
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:drawable="@drawable/button_beat_box_pressed"
        android:state_pressed="true"/>
    <item
        android:drawable="@drawable/button_beat_box_normal"/>
</selector>